<!DOCTYPE html>
<html lang="en">
<head>
   <%- include ('./partials/head.ejs') %>
</head>
<body>
    <%- include ('./partials/nav.ejs') %>
    <main class='formMain'>
          <form
            <% if(typeof actor !== "undefined"){ %> 
            action="/<%=actor.id%>?_method=PUT" method="POST">
            <% } else { %>
            action="/" method="POST">
            <% } %>
            <div class= "formDiv">
           <label for="name">Name:</label><br>
            <input type="text" id="name" name="name"
            <% if(typeof actor !=="undefined") { %> value="<%= actor.name %>" <% } %>
            /><br><br>
            </div>

            <div class= "formDiv">
            <label for="bio">Bio:</label><br>
            <textarea id="bio" name="bio"><%if(typeof actor !=="undefined"){%><%=actor.bio%><%}%></textarea><br><br>
            </div>

            <div class= "formDiv">
            <label for="img_url">Image URL:</label><br>
            <input type="text" id="img_url" name="img"
            <% if(typeof actor !=="undefined") { %> value="<%= actor.img %>" <% } %>
            /><br><br>
            </div>

            <div class= "formDiv" id="formSubmitDiv">
            <input type="submit" id="submitButton" 
            <% if(typeof actor !== "undefined"){ %> 
                value="Edit"/>
                <% } else { %>
                    value="Add Actor"/>
                <% } %>
            

            </div>

          </form>
    </main>
</body>
</html>